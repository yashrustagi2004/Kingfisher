{
  "manifest_version": 3,
  "name": "Kingfisher Test",
  "version": "0.0.1",
  "description": "Basic test manifest for Kingfisher.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "identity",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*",
    "https://mail.google.com/*"
  ],
  "oauth2": {
    "client_id": "373556498608-3827t6a19jgqvvr1p022akbo946cr4c6.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' http://localhost:3000; object-src 'self'"
  }
}
